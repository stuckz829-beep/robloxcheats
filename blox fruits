local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com'))()

local Window = Rayfield:CreateWindow({
   Name = "Blox Fruits 2026 Hub",
   LoadingTitle = "Checking Compatibility...",
   LoadingSubtitle = "by unknown",
   ConfigurationSaving = { Enabled = false }
})

-- TABS
local FarmTab = Window:CreateTab("Automation", 4483362458)
local TeleportTab = Window:CreateTab("Sea Teleports", 4483362458)
local VisualTab = Window:CreateTab("Visuals", 4483362458)

-- AUTO FARM TOGGLE
FarmTab:CreateToggle({
   Name = "Auto Farm Level",
   CurrentValue = false,
   Callback = function(Value)
      _G.AutoFarm = Value
      while _G.AutoFarm do
         task.wait(0.1)
         -- Insert Farming Logic Here
         print("Farming active...")
      end
   end,
})

-- TELEPORT BUTTONS
TeleportTab:CreateButton({
   Name = "1st Sea",
   Callback = function() game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("TravelMain") end,
})
TeleportTab:CreateButton({
   Name = "2nd Sea",
   Callback = function() game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("TravelZou") end,
})
TeleportTab:CreateButton({
   Name = "3rd Sea",
   Callback = function() game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("TravelDressrosa") end,
})

-- PLAYER ESP
local activeESP = {}
VisualTab:CreateToggle({
   Name = "Player ESP",
   CurrentValue = false,
   Callback = function(Value)
      _G.PlayerESP = Value
      if Value then
         for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= game.Players.LocalPlayer and player.Character then
               local h = Instance.new("Highlight", player.Character)
               h.FillColor = Color3.fromRGB(255, 0, 0)
               activeESP[player] = h
            end
         end
      else
         for _, h in pairs(activeESP) do h:Destroy() end
         activeESP = {}
      end
   end,
})
